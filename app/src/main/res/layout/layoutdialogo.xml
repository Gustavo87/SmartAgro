<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_axe_tvareatrabajada"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/textSizeDialogos"
        android:id="@+id/tvAreaTrabajada"
        android:visibility="gone"
        />
    <EditText
    android:id="@+id/inputAreaTrabajada"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:textSize="@dimen/textSizeDialogos"
    android:paddingLeft="20dp"
    app:layout_constraintLeft_toRightOf="@+id/tvAreaTrabajada"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:hint="0"
    android:textColorHint="#000"
    app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.501"
        android:visibility="gone"
        />
    <CheckBox
        android:id="@+id/autoguiado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_axe_autoguiado"
        android:textColor="#000"
        android:textSize="@dimen/textSizeDialogos"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputAreaTrabajada"
        />
</android.support.constraint.ConstraintLayout>
